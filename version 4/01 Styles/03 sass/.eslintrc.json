{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "env": {
        "browser": true,
        "node": true,
        "jquery": true
    },
    "parser": "babel-eslint",
    "rules": {
        "no-console": 0,
        "max-lines": ["error", 1000]
    },
    "settings": {
        "react": {
            "createClass": "createReactClass",

            "pragma": "React",
            "version": "15.0",
            "flowVersion": "0.53"
        },
        "propWrapperFunctions": ["forbidExtraProps"]
    }
}